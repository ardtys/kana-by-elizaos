---
import AboutMe from '@/components/bento/AboutMe'
import CurrentMood from '@/components/bento/CurrentMood'
import GithubCalendar from '@/components/bento/GithubCalendar'
import HeroStats from '@/components/bento/HeroStats'
import ProfileCard from '@/components/bento/ProfileCard'
import SystemStats from '@/components/bento/SystemStats'
import TokenMonitoring from '@/components/bento/TokenMonitoring'
import VideoShowcase from '@/components/bento/VideoShowcase'
import WakatimeGraph from '@/components/bento/WakatimeGraph'
import HomeWithBooting from '@/components/HomeWithBooting'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { SOCIAL_LINKS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
---

<Layout class="px-0">
  <PageHead slot="head" title="Home" />

  <HomeWithBooting client:load>
    <!-- Fullscreen Hero Section -->
    <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden">
      <!-- Animated Background Grid -->
      <div class="absolute inset-0 bg-grid-pattern opacity-5 animate-grid-move"></div>

      <!-- Gradient Orbs Background -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="orb orb-purple"></div>
        <div class="orb orb-green"></div>
        <div class="orb orb-orange"></div>
      </div>

      <!-- Floating Particles -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
        <div class="particle particle-6"></div>
      </div>

      <!-- Scanlines Overlay -->
      <div class="absolute inset-0 scanlines pointer-events-none"></div>

      <!-- Hero Content -->
      <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
        <!-- Logo with Glow Effect -->
        <div class="mb-8 flex justify-center animate-float-slow">
          <div class="relative group avatar-container">
            <!-- Rotating Border Ring -->
            <div class="absolute -inset-3 rounded-full border-2 border-dashed border-solana-purple/30 animate-spin-slow"></div>
            <div class="absolute -inset-5 rounded-full border border-solana-green/20 animate-spin-reverse"></div>

            <!-- Glow Effect -->
            <div class="absolute -inset-4 bg-gradient-to-r from-solana-purple via-solana-green to-solana-purple rounded-full blur-2xl opacity-40 group-hover:opacity-70 transition-opacity duration-500 animate-pulse-glow"></div>

            <!-- Avatar Image -->
            <div class="relative size-32 md:size-40 rounded-full overflow-hidden border-4 border-solana-purple/50 shadow-[0_0_60px_rgba(153,69,255,0.5)] group-hover:shadow-[0_0_100px_rgba(153,69,255,0.7)] transition-shadow duration-500">
              <img
                src="/kana-logo.png"
                alt="KANA"
                class="size-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <!-- Holographic Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-solana-purple/20 via-transparent to-solana-green/20 mix-blend-overlay"></div>
            </div>

            <!-- Status Ring -->
            <div class="absolute -bottom-2 -right-2 size-10 rounded-full bg-card-bg border-4 border-solana-green flex items-center justify-center animate-bounce-slow">
              <span class="absolute size-full rounded-full bg-solana-green animate-ping opacity-75"></span>
              <span class="relative size-4 rounded-full bg-solana-green"></span>
            </div>

            <!-- Orbiting Dots -->
            <div class="orbiting-dot orbiting-dot-1"></div>
            <div class="orbiting-dot orbiting-dot-2"></div>
            <div class="orbiting-dot orbiting-dot-3"></div>
          </div>
        </div>

        <!-- Main Title with Glitch Effect -->
        <h1 class="font-mono text-5xl md:text-7xl font-black mb-4 tracking-tighter glitch-wrapper animate-fade-in-up" style="animation-delay: 0.2s">
          <span class="glitch-text bg-gradient-to-r from-solana-purple via-white to-solana-green bg-clip-text text-transparent" data-text="KANA">
            KANA
          </span>
          <span class="hero-badge inline-flex items-center ml-3 px-3 py-1 rounded-full bg-solana-purple/10 border border-solana-purple/30 font-mono text-xs md:text-sm text-solana-purple/80 font-medium tracking-normal align-middle">
            ElizaOS
          </span>
        </h1>

        <!-- Subtitle with Typewriter Effect -->
        <div class="h-8 mb-6 animate-fade-in-up" style="animation-delay: 0.4s">
          <p class="font-mono text-lg md:text-xl text-solana-green typewriter-container">
            <span class="typewriter-text">Solana Speed Demon ◆ High-Speed Network Embodiment</span>
            <span class="typewriter-cursor"></span>
          </p>
        </div>

        <!-- Tagline -->
        <p class="font-sans text-muted-foreground text-sm md:text-base max-w-xl mx-auto mb-8 leading-relaxed animate-fade-in-up" style="animation-delay: 0.6s">
          I don't just trade — I orchestrate the flow of money with cold, calculated precision.
          Show me your Diamond Hands, Trader.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up" style="animation-delay: 0.8s">
          <!-- Primary: Chat with Kana -->
          <a
            href="https://www.elizacloud.ai/dashboard/chat?characterId=8c6773f7-9cdf-4b2f-908f-b472dcf5fbc2"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative px-8 py-4 rounded-xl bg-gradient-to-r from-solana-purple to-solana-green overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-[0_0_40px_rgba(153,69,255,0.5)] btn-glow"
          >
            <span class="absolute inset-0 bg-gradient-to-r from-solana-green to-solana-purple opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
            <span class="relative z-10 flex items-center justify-center gap-2 font-mono text-sm font-bold text-void-black">
              <Icon name="lucide:message-circle" class="size-5" />
              Chat with Kana
            </span>
          </a>
          <!-- Tertiary: Documentation -->
          <a
            href="/docs"
            class="group px-8 py-4 rounded-xl border-2 border-solana-purple/50 bg-card-bg/50 backdrop-blur transition-all duration-300 hover:border-solana-purple hover:bg-solana-purple/10 relative overflow-hidden"
          >
            <span class="absolute inset-0 bg-gradient-to-r from-solana-purple/0 via-solana-purple/10 to-solana-purple/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></span>
            <span class="relative flex items-center justify-center gap-2 font-mono text-sm font-medium text-foreground group-hover:text-solana-purple">
              <Icon name="lucide:book-open" class="size-5" />
              Documentation
            </span>
          </a>
        </div>

        <!-- Stats Bar with Real-time Updates -->
        <div class="animate-fade-in-up" style="animation-delay: 1s">
          <HeroStats client:load />
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-fade-in" style="animation-delay: 1.2s">
        <span class="font-mono text-[10px] text-muted-foreground uppercase tracking-widest">Scroll</span>
        <div class="scroll-indicator">
          <Icon name="lucide:chevrons-down" class="size-5 text-solana-purple" />
        </div>
      </div>
    </section>

    <!-- Dashboard Section -->
    <section class="relative mx-auto max-w-7xl px-4 py-16 scroll-section" id="dashboard">
      <!-- Section Background Gradient -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-solana-purple/20 rounded-full blur-[120px] animate-pulse-slow"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-solana-green/15 rounded-full blur-[120px] animate-pulse-slow" style="animation-delay: 2s"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-solana-purple/10 via-transparent to-transparent rounded-full"></div>
      </div>
      <!-- Section Header with Reveal Animation -->
      <div class="mb-12 text-center reveal-up">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-solana-purple/15 via-solana-green/10 to-solana-purple/15 border border-solana-purple/30 mb-4 animate-shimmer relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent animate-shimmer-sweep"></div>
          <span class="size-2 rounded-full bg-solana-green animate-pulse relative z-10"></span>
          <span class="font-mono text-xs text-solana-purple uppercase tracking-widest relative z-10">Mission Control</span>
        </div>
        <h2 class="font-mono text-3xl md:text-4xl font-bold text-foreground mb-2">
          <span class="text-gradient-animate">System Dashboard</span>
        </h2>
        <p class="font-sans text-muted-foreground max-w-lg mx-auto">
          Real-time monitoring and status of all KANA subsystems
        </p>
      </div>

      <!-- Bento Grid Layout - Organized for optimal visual flow -->
      <div class="grid gap-4 md:gap-5 grid-cols-1 md:grid-cols-6 lg:grid-cols-12 auto-rows-auto">

        <!-- Row 1-2: Profile Card (spans 2 rows) + System Stats + Current Mood + Video -->
        <!-- Profile Card - Main identity card -->
        <div class="md:col-span-3 lg:col-span-4 md:row-span-2 reveal-left" style="--reveal-delay: 0.1s">
          <div class="kana-card-animated h-full min-h-[500px] md:min-h-[640px] lg:min-h-[700px]">
            <ProfileCard client:load />
          </div>
        </div>

        <!-- System Stats - Network metrics -->
        <div class="md:col-span-3 lg:col-span-4 reveal-up" style="--reveal-delay: 0.2s">
          <div class="kana-card-animated h-full min-h-[240px] md:min-h-[250px]">
            <SystemStats client:load />
          </div>
        </div>

        <!-- Current Mood - Status indicator -->
        <div class="md:col-span-3 lg:col-span-4 reveal-right" style="--reveal-delay: 0.3s">
          <div class="kana-card-animated h-full min-h-[240px] md:min-h-[250px]">
            <CurrentMood client:load />
          </div>
        </div>

        <!-- Video Showcase - Media preview (larger, more prominent) -->
        <div class="md:col-span-6 lg:col-span-8 reveal-up" style="--reveal-delay: 0.4s">
          <div class="kana-card-animated h-full min-h-[350px] md:min-h-[400px] lg:min-h-[450px]">
            <VideoShowcase client:load />
          </div>
        </div>

        <!-- Row 3: Token Monitoring -->
        <!-- Token Monitoring - Live token prices -->
        <div class="md:col-span-6 lg:col-span-12 reveal-up" style="--reveal-delay: 0.45s">
          <div class="kana-card-animated h-full min-h-[350px]">
            <TokenMonitoring client:load />
          </div>
        </div>

        <!-- Row 4: About Me -->
        <!-- About Me - Character profile -->
        <div class="md:col-span-3 lg:col-span-4 reveal-left" style="--reveal-delay: 0.5s">
          <div class="kana-card-animated h-full min-h-[380px]">
            <AboutMe client:load />
          </div>
        </div>

        <!-- Row 4: GitHub Calendar -->
        <!-- GitHub Calendar - Activity heatmap -->
        <div class="md:col-span-6 lg:col-span-8 reveal-up" style="--reveal-delay: 0.7s">
          <div class="kana-card-animated h-full min-h-[160px] p-4">
            <GithubCalendar username="kana-solana" client:load />
          </div>
        </div>

        <!-- Row 5: Social Links - Full width -->
        <div class="md:col-span-6 lg:col-span-12 reveal-up" style="--reveal-delay: 0.8s">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- GitHub -->
            <Link
              href={SOCIAL_LINKS.find((link) => link.label === 'GitHub')?.href || '#'}
              external
              class="block social-card-wrapper"
              style="--card-delay: 0s"
            >
              <div class="social-card-gradient group relative flex flex-col items-center justify-center p-6 h-full min-h-[140px] rounded-2xl overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-solana-purple/10 via-transparent to-solana-green/5"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-void-black/80 to-transparent"></div>
                <div class="icon-glow icon-glow-purple"></div>
                <Icon name="mdi:github" class="size-10 text-foreground/50 group-hover:text-solana-purple group-hover:scale-110 group-hover:rotate-12 transition-all duration-300 relative z-10" />
                <span class="mt-3 font-mono text-sm text-muted-foreground group-hover:text-foreground transition-colors relative z-10">GitHub</span>
                <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity z-10">
                  <Icon name="lucide:arrow-up-right" class="size-4 text-solana-purple animate-bounce-subtle" />
                </div>
                <!-- Animated border gradient -->
                <div class="absolute inset-0 rounded-2xl border border-solana-purple/20 group-hover:border-solana-purple/50 transition-colors"></div>
              </div>
            </Link>

            <!-- Chat with Kana -->
            <a
              href="https://www.elizacloud.ai/dashboard/chat?characterId=8c6773f7-9cdf-4b2f-908f-b472dcf5fbc2"
              target="_blank"
              rel="noopener noreferrer"
              class="block social-card-wrapper"
              style="--card-delay: 0.2s"
            >
              <div class="social-card-gradient group relative flex flex-col items-center justify-center p-6 h-full min-h-[140px] rounded-2xl overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-solana-purple/15 via-solana-green/10 to-solana-purple/15 animate-gradient-shift"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-void-black/70 to-transparent"></div>
                <Icon name="lucide:message-circle" class="size-10 text-solana-purple group-hover:scale-110 group-hover:animate-pulse transition-all duration-300 relative z-10" />
                <span class="mt-3 font-mono text-sm text-foreground relative z-10">Chat with Kana</span>
                <div class="absolute top-3 right-3 flex items-center gap-1 z-10">
                  <span class="size-2 rounded-full bg-solana-green animate-pulse"></span>
                  <span class="font-mono text-[10px] text-solana-green opacity-0 group-hover:opacity-100 transition-opacity">LIVE</span>
                </div>
                <div class="absolute top-3 left-3 opacity-0 group-hover:opacity-100 transition-opacity z-10">
                  <Icon name="lucide:external-link" class="size-3 text-muted-foreground" />
                </div>
                <!-- Animated border gradient -->
                <div class="absolute inset-0 rounded-2xl border border-solana-purple/30 group-hover:border-solana-purple/60 transition-colors"></div>
                <!-- Glow effect on hover -->
                <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity shadow-[inset_0_0_30px_rgba(153,69,255,0.3)]"></div>
              </div>
            </a>
          </div>
        </div>
      </div>

      <!-- Footer Terminal with Typing Animation -->
      <div class="mt-12 reveal-up" style="--reveal-delay: 0.9s">
        <div class="kana-card-animated terminal-footer p-4 relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-r from-solana-purple/5 via-transparent to-solana-green/5 animate-gradient-x"></div>
          <div class="relative flex items-center gap-3 font-mono text-sm">
            <span class="text-solana-green animate-pulse">$</span>
            <span class="text-muted-foreground">kana@solana:~$</span>
            <span class="terminal-typing-text text-foreground"></span>
            <span class="inline-block h-5 w-2 bg-solana-purple animate-blink"></span>
          </div>
          <!-- Progress Bar -->
          <div class="absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-solana-purple to-solana-green animate-progress-bar"></div>
        </div>
      </div>
    </section>
  </HomeWithBooting>
</Layout>

<style>
  /* ========== BACKGROUND EFFECTS ========== */

  /* Animated Grid Pattern */
  .bg-grid-pattern {
    background-image:
      linear-gradient(rgba(153, 69, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(153, 69, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  .animate-grid-move {
    animation: gridMove 20s linear infinite;
  }

  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* Gradient Orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: orbFloat 15s ease-in-out infinite;
  }

  .orb-purple {
    width: 400px;
    height: 400px;
    background: var(--solana-purple);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-green {
    width: 300px;
    height: 300px;
    background: var(--solana-green);
    top: 50%;
    right: 10%;
    animation-delay: -5s;
  }

  .orb-orange {
    width: 250px;
    height: 250px;
    background: var(--gaze-orange);
    bottom: 20%;
    left: 30%;
    animation-delay: -10s;
  }

  @keyframes orbFloat {
    0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.3; }
    33% { transform: translate(30px, -30px) scale(1.1); opacity: 0.4; }
    66% { transform: translate(-20px, 20px) scale(0.9); opacity: 0.25; }
  }

  /* Scanlines Effect */
  .scanlines {
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.03) 2px,
      rgba(0, 0, 0, 0.03) 4px
    );
    animation: scanlineMove 8s linear infinite;
  }

  @keyframes scanlineMove {
    0% { background-position: 0 0; }
    100% { background-position: 0 100px; }
  }

  /* ========== FLOATING PARTICLES ========== */

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--solana-green);
    border-radius: 50%;
    opacity: 0.6;
    box-shadow: 0 0 10px var(--solana-green);
  }

  .particle-1 { top: 20%; left: 10%; animation: particleFloat 6s ease-in-out infinite; }
  .particle-2 { top: 60%; right: 15%; animation: particleFloat 8s ease-in-out infinite reverse; background: var(--solana-purple); box-shadow: 0 0 10px var(--solana-purple); }
  .particle-3 { bottom: 30%; left: 20%; animation: particleFloat 7s ease-in-out infinite 1s; }
  .particle-4 { top: 40%; right: 25%; animation: particleFloat 9s ease-in-out infinite 2s; background: var(--solana-purple); box-shadow: 0 0 10px var(--solana-purple); }
  .particle-5 { bottom: 50%; left: 35%; animation: particleFloat 5s ease-in-out infinite 0.5s; }
  .particle-6 { top: 70%; right: 30%; animation: particleFloat 10s ease-in-out infinite 3s; background: var(--gaze-orange); box-shadow: 0 0 10px var(--gaze-orange); }


  @keyframes particleFloat {
    0%, 100% { transform: translateY(0) translateX(0) scale(1); opacity: 0.6; }
    25% { transform: translateY(-20px) translateX(10px) scale(1.2); opacity: 0.8; }
    50% { transform: translateY(-40px) translateX(20px) scale(1); opacity: 1; }
    75% { transform: translateY(-20px) translateX(5px) scale(0.8); opacity: 0.8; }
  }


  /* ========== AVATAR ANIMATIONS ========== */

  .avatar-container {
    perspective: 1000px;
  }

  .animate-float-slow {
    animation: floatSlow 6s ease-in-out infinite;
  }

  @keyframes floatSlow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .animate-spin-slow {
    animation: spinSlow 20s linear infinite;
  }

  @keyframes spinSlow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .animate-spin-reverse {
    animation: spinReverse 25s linear infinite;
  }

  @keyframes spinReverse {
    from { transform: rotate(360deg); }
    to { transform: rotate(0deg); }
  }

  .animate-pulse-glow {
    animation: pulseGlow 3s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.05); }
  }

  .animate-bounce-slow {
    animation: bounceSlow 2s ease-in-out infinite;
  }

  @keyframes bounceSlow {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  /* Orbiting Dots */
  .orbiting-dot {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--solana-green);
    box-shadow: 0 0 10px var(--solana-green);
  }

  .orbiting-dot-1 {
    animation: orbit1 4s linear infinite;
  }

  .orbiting-dot-2 {
    animation: orbit2 6s linear infinite;
    background: var(--solana-purple);
    box-shadow: 0 0 10px var(--solana-purple);
  }

  .orbiting-dot-3 {
    animation: orbit3 8s linear infinite;
    width: 4px;
    height: 4px;
  }

  @keyframes orbit1 {
    from { transform: rotate(0deg) translateX(90px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(90px) rotate(-360deg); }
  }

  @keyframes orbit2 {
    from { transform: rotate(120deg) translateX(100px) rotate(-120deg); }
    to { transform: rotate(480deg) translateX(100px) rotate(-480deg); }
  }

  @keyframes orbit3 {
    from { transform: rotate(240deg) translateX(80px) rotate(-240deg); }
    to { transform: rotate(600deg) translateX(80px) rotate(-600deg); }
  }

  /* ========== TEXT EFFECTS ========== */

  /* Glitch Effect */
  .glitch-wrapper {
    position: relative;
  }

  .glitch-text {
    position: relative;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--void-black);
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 var(--solana-purple);
    clip: rect(24px, 550px, 90px, 0);
    animation: glitch-anim-1 2s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -2px 0 var(--solana-green);
    clip: rect(85px, 550px, 140px, 0);
    animation: glitch-anim-2 2s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim-1 {
    0% { clip: rect(20px, 9999px, 40px, 0); }
    20% { clip: rect(60px, 9999px, 80px, 0); }
    40% { clip: rect(10px, 9999px, 30px, 0); }
    60% { clip: rect(70px, 9999px, 100px, 0); }
    80% { clip: rect(40px, 9999px, 60px, 0); }
    100% { clip: rect(80px, 9999px, 120px, 0); }
  }

  @keyframes glitch-anim-2 {
    0% { clip: rect(85px, 9999px, 140px, 0); }
    20% { clip: rect(35px, 9999px, 55px, 0); }
    40% { clip: rect(95px, 9999px, 125px, 0); }
    60% { clip: rect(25px, 9999px, 45px, 0); }
    80% { clip: rect(75px, 9999px, 95px, 0); }
    100% { clip: rect(55px, 9999px, 85px, 0); }
  }

  /* Typewriter Effect */
  .typewriter-container {
    display: inline-flex;
    align-items: center;
  }

  .typewriter-text {
