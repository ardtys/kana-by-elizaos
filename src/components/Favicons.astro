const cacheBuster = Date.now()
---
<link rel="icon" type="image/png" href={`/kana-logo.png?v=${cacheBuster}`} />
<link rel="icon" type="image/png" href={`/kana-logo.png?v=${cacheBuster}`} sizes="96x96" />
<link rel="icon" type="image/png" href={`/kana-logo.png?v=${cacheBuster}`} sizes="32x32" />
<link rel="icon" type="image/png" href={`/kana-logo.png?v=${cacheBuster}`} sizes="16x16" />
<link rel="shortcut icon" href={`/kana-logo.png?v=${cacheBuster}`} />
